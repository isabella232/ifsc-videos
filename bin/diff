#!/usr/bin/env php
<?php declare(strict_types=1);

require __DIR__ . '/functions.php';

$opts = getopt('', ['old-videos:', 'new-videos:']);

$oldVideos = json_file($opts['old-videos']);
$newVideos = json_file($opts['new-videos']);

$added = [];
$updated = [];

foreach ($newVideos as $newVideo) {
    $oldVideo = video_by_id($oldVideos, $newVideo->video_id);

    if (!$oldVideo) {
        $added[] = sprintf(
            '- [%s](https://youtu.be/%s)',
            $newVideo->title,
            $newVideo->video_id,
        );
    } else {
        if ($oldVideo->duration !== $newVideo->duration) {
            $updated[] = sprintf(
                '- *[%s](https://youtu.be/%s)* changed from %d to %d minutes',
                $oldVideo->title,
                $oldVideo->video_id,
                $oldVideo->duration,
                $newVideo->duration,
            );
        }
        if ($oldVideo->title !== $newVideo->title) {
            $updated[] = sprintf(
                '- *[%s](https://youtu.be/%s)* changed its title from %s to %s',
                $oldVideo->title,
                $oldVideo->video_id,
                $oldVideo->title,
                $newVideo->title,
            );
        }
        if ($oldVideo->scheduled_start_time !== $newVideo->scheduled_start_time) {
            $updated[] = sprintf(
                '- *[%s](https://youtu.be/%s)* scheduled start time changed from %s to %s',
                $oldVideo->title,
                $oldVideo->video_id,
                $oldVideo->scheduled_start_time,
                $newVideo->scheduled_start_time,
            );
        }
        if ($oldVideo->restricted_regions !== $newVideo->restricted_regions) {
            $updated[] = sprintf(
                '- *[%s](https://youtu.be/%s)* changed restricted regions from %s to %s',
                $oldVideo->title,
                $oldVideo->video_id,
                implode(', ', $oldVideo->restricted_regions),
                implode(', ', $newVideo->restricted_regions),
            );
        }
    }
}

print_list('Added videos', $added);
print_list('Updated videos', $updated);
