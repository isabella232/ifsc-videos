#!/usr/bin/env php
<?php declare(strict_types=1);

require __DIR__ . '/functions.php';

$opts = getopt('', ['old-videos:', 'new-videos:']);

$oldVideos = json_file($opts['old-videos']);
$newVideos = json_file($opts['new-videos']);

$added = [];
$updated = [];

foreach ($newVideos as $newVideo) {
    $oldVideo = video_by_id($oldVideos, $newVideo->video_id);

    if (!$oldVideo) {
        $added[] = sprintf(
            '- [%s](https://youtu.be/%s)',
            $newVideo->title,
            $newVideo->video_id
        );
    } else {
        if ($oldVideo->duration !== $newVideo->duration) {
            $updated[] = sprintf(
                '- *[%s](https://youtu.be/%s)* changed from %d to %d minutes',
                $oldVideo->title,
                $oldVideo->video_id,
                $oldVideo->duration,
                $newVideo->duration,
            );
        }
    }
}

if ($added) {
    echo '**Added videos:**', PHP_EOL;
    echo implode(PHP_EOL, $added), PHP_EOL;
}

if ($updated) {
    if ($added) {
        echo PHP_EOL;
    }

    echo '**Updated videos:**', PHP_EOL;
    echo implode(PHP_EOL, $updated), PHP_EOL;
}
